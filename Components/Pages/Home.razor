@page "/"

@layout HomeLayout

<PageTitle>Star Fetch - Home</PageTitle>

<!-- Page Background-->
<div class="h-100 d-flex justify-content-center">
    <div class="row row-cols-1 row-cols-xl-2 container-xxl h-100">
        <div class="col d-flex flex-column justify-content-xl-center order-last order-xl-first">
            <div class="title">Welcome to Star Fetch</div>
            <div class="subTitle">Your Cinematic Dashboard</div>
            <p style="color: var(--cf-theme-100); font-weight: bold">
                Discover what’s playing now, explore trending titles, and dive deep into cast details and trailers — all in real time. Whether
                you're browsing blockbusters or curating your personal favorites, StarFetch delivers a sleek, responsive experience built for movie 
                lovers and crafted by a developer who knows how to blend logic with flair
            </p>
            <div class="mt-3">
                <h4 style="color: var(--cf-theme-100)">Try It Out Now!</h4>
                <div class="hstack gap-2">
                    <a href="now-playing" class="btn btn-home fw-bold">Now Playing</a>
                    <a href="popular" class="btn btn-home fw-bold">Popular</a>
                    <a href="favorites" class="btn btn-home fw-bold">Favorites</a>
                </div>
            </div>
            <div class="mt-3" style="color: var(--cf-theme-100)">
                Built with pride using:
                <div class="hstack my-2">
                    <div><i class="devicons devicon-csharp-plain me-1" /></div>
                    <div><i class="devicons devicon-blazor-plain me-1" /></div>
                    <div><i class="devicons devicon-bootstrap-plain me-1" /></div>
                    @* <div><i class="devicons devicon-javascript-plain colored me-1" /></div> *@
                    <div><i class="devicons devicon-html5-plain me-1" /></div>
                    <div><i class="devicons devicon-css3-plain me-1" /></div>
                </div>
            </div>
        </div>
        <div class="col d-flex flex-column justify-content-center">
            <img src="img/brand/LandingPageLogo.png" class="img-fluid" />
        </div>
    </div>
</div>